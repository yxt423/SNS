<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/white" 
 >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/white"
>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" >
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" 
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<ImageView
		android:id="@+id/iv0"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:src="@drawable/bitmap8"  
		android:layout_gravity="center_horizontal"
		android:paddingTop="10dp"
		/> 
		<TextView android:id="@+id/zuozhe1"
		style="@style/text_black"
		android:layout_width="fill_parent"  android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal"
		/>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView android:id="@+id/biaoti1"  style="@style/title_black"
		android:layout_width="fill_parent"  android:layout_height="wrap_content"
		android:gravity="center_vertical"  android:paddingTop="10dp" />
		
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" >		
		    <TextView android:id="@+id/zhuangtai1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"  android:text="评定中" />
			<TextView android:id="@+id/biaoqian1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:paddingLeft="10dp" />
			<TextView android:id="@+id/shijian1"  style="@style/text_gray"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="right" 
			android:paddingLeft="10dp"  android:paddingRight="5dp" />	
	    </LinearLayout>

	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">		
		    <TextView  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"   android:text="好评："/>
			<TextView android:id="@+id/haoscore1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"   />
			<TextView   style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical" android:paddingLeft="10dp"
			android:text="差评："/>
			<TextView android:id="@+id/chascore1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"   />	
	    </LinearLayout>
	    
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		    <TextView style="@style/text_black" android:text="完成度："
			android:layout_width="wrap_content" android:layout_height="wrap_content"  />
			<ProgressBar android:id="@+id/pb1"
			android:layout_width="150dp" android:layout_height="wrap_content" 
			style="?android:attr/progressBarStyleHorizontal"
			android:max="100" android:progress="0" android:layout_marginRight="3dp"/>
			<TextView style="@style/list_text_black"  android:id="@+id/score1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"  />
			<TextView style="@style/list_text_black"  android:text="%"
			android:layout_width="wrap_content" android:layout_height="wrap_content"  />
	    </LinearLayout>
	    
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">		
		    <TextView android:id="@+id/jiezhi1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"   android:text="截止时间："/>
			<TextView android:id="@+id/deadline1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:gravity="center_vertical"   />
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>

<TextView 
android:id="@+id/zhengwen1"  style="@style/text_black"
android:layout_width="fill_parent"  android:layout_height="wrap_content"
android:text="正文  "
android:padding="10dp"  />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/tupian" 
android:orientation="vertical"  android:paddingLeft="10dp" android:paddingRight="10dp" 
android:layout_width="wrap_content"  android:layout_height="wrap_content"  >
</LinearLayout>

<TableLayout xmlns:Android="http://schemas.android.com/apk/res/android"  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"   
    >  
    <TableRow> 
	  <Button
	  android:id="@+id/b1"
	  android:layout_height="wrap_content"  android:layout_marginLeft="90dp"
	  android:text="顶" android:drawableTop="@drawable/jia"
	  />
	  <Button
	  android:id="@+id/b2"
	  android:layout_height="wrap_content"
	  android:text="踩" android:drawableTop="@drawable/jian"
	  />  
    </TableRow> 
</TableLayout> 

<TableLayout xmlns:Android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:stretchColumns="*"  
    >  
    <TableRow> 
	  <Button
	  android:id="@+id/b3"
	  android:layout_height="40dp"
	  android:text="查看评论"
	  android:layout_width="1dip"
	  />
	  <Button
	  android:id="@+id/b4"
	  android:layout_height="40dp"
	  android:text="发表评论"
	  android:layout_width="1dip"
	  />  
	  <Button
	  android:id="@+id/b5"
	  android:layout_height="40dp"
	  android:text="返回"
	  android:layout_width="1dip"
	  /> 
    </TableRow>  
</TableLayout>  

</LinearLayout>
</ScrollView>