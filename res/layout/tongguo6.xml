<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/white" 
 >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/lvtongguo6"  android:orientation="vertical"
android:layout_width="fill_parent"  android:layout_height="fill_parent"

>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
		<ImageView
		android:id="@+id/iv0"
		android:layout_width="90dp" android:layout_height="90dp"
		android:src="@drawable/bitmap8" 
		android:layout_gravity="center_horizontal"
		android:paddingTop="10dp"
		/> 
		<TextView android:id="@+id/zuozhe1"
		style="@style/text_black"
		android:layout_width="fill_parent"  android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal"
		/>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView android:id="@+id/biaoti1"  style="@style/title_black"
		android:layout_width="fill_parent"  android:layout_height="wrap_content" 
		android:paddingTop="10dp" />
		
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content"> 
		    <TextView android:text="状态：" style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"   />
		    <TextView android:id="@+id/zhuangtai1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"  
			android:text="已通过"/>
	    </LinearLayout> 
	    
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		    <TextView android:text="标签：" style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"   />
			<TextView android:id="@+id/biaoqian1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			/>  
	    </LinearLayout> 
	    
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		    <TextView android:text="时间：" style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"   />
			<TextView android:id="@+id/shijian1"  style="@style/text_black"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			 />   
	    </LinearLayout> 
	</LinearLayout> 
</LinearLayout>

<TextView 
android:id="@+id/zhengwen1"  style="@style/text_black"
android:layout_width="fill_parent"  android:layout_height="wrap_content"
android:text="正文 " android:minHeight="285dp" 
android:padding="10dp"  />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/tupian" 
android:orientation="vertical"  android:paddingLeft="10dp" android:paddingRight="10dp" 
android:layout_width="wrap_content"  android:layout_height="wrap_content"  >
</LinearLayout>

<Button
android:id="@+id/b3"  android:text="发起挑战"
android:layout_marginLeft="106dp" 
android:layout_height="40dp"  android:layout_width="105dp"
/> 

<TableLayout xmlns:Android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"   android:layout_height="fill_parent"  
    android:stretchColumns="*"  
    >  
    <TableRow> 
	  <Button
	  android:id="@+id/b1"
	  android:layout_height="40dp"
	  android:text="查看评论"
	  android:layout_width="1dip"
	  />
	  <Button
	  android:id="@+id/b2"
	  android:layout_height="40dp"
	  android:text="发表评论"
	  android:layout_width="1dip"
	  />  
	   
	  <Button
	  android:id="@+id/b4"
	  android:layout_height="40dp"
	  android:text="返回"
	  android:layout_width="1dip"
	  /> 
    </TableRow>  
</TableLayout>  

</LinearLayout>
</ScrollView>
