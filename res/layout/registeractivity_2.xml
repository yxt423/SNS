<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"  android:background="@drawable/white"
android:layout_width="fill_parent" android:layout_height="fill_parent"
>
<TextView 
android:text="注册新用户"  style="@style/title_black" 
android:layout_width="fill_parent"   android:layout_height="wrap_content"     
android:gravity="center_horizontal" android:paddingTop="20dp" />

<TableLayout xmlns:Android="http://schemas.android.com/apk/res/android"  
	    android:layout_width="wrap_content"   android:layout_height="wrap_content"    
	    android:layout_gravity="center_horizontal" android:paddingTop="10dp" >  
	    <TableRow>   
	    <TextView android:text="用户名"  style="@style/text_black" />
        <EditText android:id="@+id/register_userName_editText" 
                  android:layout_width="150dp" android:layout_height="wrap_content" />
	    </TableRow>
	    
	    <TableRow> 
	    <TextView style="@style/text_black" android:text="密码"  />
        <EditText android:layout_width="150dp" android:layout_height="wrap_content" 
                  android:id="@+id/register_passWord_editText"  android:inputType="textPassword"/>
	    </TableRow>
	    
	    <TableRow> 
	    <TextView style="@style/text_black" android:text="确认密码  "  />
        <EditText android:layout_width="150dp" android:layout_height="wrap_content" 
                  android:id="@+id/register_passWordSure_textView"  android:inputType="textPassword"/>
	    </TableRow>
	    
	    <TableRow> 
	    <TextView android:text="邮箱"  style="@style/text_black" />
        <EditText android:layout_width="150dp" android:layout_height="wrap_content" 
                  android:id="@+id/register_mail_editText"/>
	    </TableRow>
</TableLayout>

<Button 
style="@style/text_black"
android:id="@+id/register_registerButton"  android:layout_gravity="center_horizontal"
android:layout_width="100dp"  android:layout_height="40dp"
android:text="注册" />       


        



</LinearLayout>